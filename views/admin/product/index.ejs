<%- include('../../_layouts/adminheader'); -%>
<table style="width:100%" class="table">
  <tr>
      <th class="headtext">
          Product
      </th>
      <th class="float-right">
          <a href="/admin/products/create" class="btn btn-primary pull-right">
              Add Product</a>
      </th>
  </tr>
</table>
<hr>

<div class="row container" style="border: 1px solid #ccc;">
    <div class="col-md-12 col-lg-12 col-xl-12 col-sm-12 col-xs-12">
        <div class="panel panel-default">
            <div class="panel-body">
                <%if(count==0){%>
                    <h3>No Data available</h3>
                    <%}else{%>


                    
                <table class="table table-striped products">
                    <thead>
                        <tr>
                           <th>Title</th>
                           <th>price</th>
                           <th>category</th>
                           <th>image</th>
                           <th>Edit</th>
                           <th>Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% datas.forEach(function(data){ %>
                            <tr>
                                <td> <%= data.title %></td>
                                <td> $<%= parseFloat(data.price).toFixed(2) %></td>
                                <td> <%= data.category %></td>
                                <%if (data.image==""){%>
                                    <td><img src="/images/noimage.png" width="100" height="100"></td>
                                    <%} else{%>
                                        <td><img src="/product_images/<%=data._id%>/<%= data.image %>" width="100" height="100"></td>
                                    <%}%>
                                <td><a href="/admin/products/edit/<%=data._id%>">Edit</a></td>
                                <td><a class="confirmdeletion" href="/admin/products/delete/<%=data._id%>">Delete</a></td>
                            </tr>
                             
                         <% }); %>

                    </tbody>
                    
                </table>
                <%}%>
             
            </div>
        </div>
    </div>
</div>

<%- include('../../_layouts/adminfooter'); -%>