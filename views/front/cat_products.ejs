<%- include('../_layouts/header'); -%>
<div class="row">
  <%if(products==""){%>
    <h3 class="productfirstdiv">Sorry No Products Available</h3>
    <%}else{%>
      
  <% products.forEach(function(p){ %>
    <div class="col-xs-12 col-md-4 productfirstdiv">
      <a href="/products/<%=p.category%>/<%=p.slug%>" class="pa">
        <img class="pimage" src="/product_images/<%=p.id%>/<%=p.image%>">
      </a>
      <h3><%=p.title%></h3>
      <h4>$<%=parseFloat(p.price).toFixed(2)%></h4>
      <a href="/products/<%=p.category%>/<%=p.slug%>" class="vd"> View Detail</a>
    </div>


    <% }); %>
    <%}%>

</div>

<%- include('../_layouts/footer'); -%>